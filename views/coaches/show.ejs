<%- include('../partials/_header.ejs') %>
    <%- include('../partials/_navbar.ejs') %>

        <a href="/coaches">
            <button>
                Back to Coaches
            </button>
        </a>
        <div class="section">
            <h1 class="title ">
                <%= coach.name %>
            </h1>
            <div>
                Total Seasons: <%= coach.seasons %>
                Regular Season Win Rate: <%= ((coach.regularSeasonWins/coach.totalRegularSeasonGames)*100).toFixed(2) + '%' %>
                Post Season Win Rate: <%= ((coach.playoffWins/coach.playoffGames)*100).toFixed(2) + '%'  %>
                Super Bowl Rings: <%= coach.superBowlWins %>
            </div>
        </div>
        <div class="section">
            <h3>Regular Season</h3>
        </div>
        <div class="section">
            <h3>Post Season</h3>
        </div>
        <div>
            Coming Soon - Individual Seasons
        </div>
        <% if (user) { %>
        <div id="buttons">
            <a href="/coaches/<%= coach._id %>/edit">
                <button>
                    Edit <%= coach.name %>
                </button>
            </a>
            <form action="/coaches/<%=coach._id%>?_method=DELETE" method="POST">
                <button type="submit">
                    Delete <%= coach.name %>
                </button>
            </form>
            <% } else { %>
                Sign in to edit coach!
            <% } %>
        </div>
        <%- include ('../partials/_footer.ejs') %>